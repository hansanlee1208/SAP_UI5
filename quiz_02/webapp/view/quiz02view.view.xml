<mvc:View controllerName="quiz.quiz02.controller.quiz02view"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <VBox >
        <Input id = "inputTodo" placeholder="Enter todo.."/>
        <Button text = "Add" press = ".onAddTodo"/>
        <Table id = "todoTable" items = "{oo>/todos}" mode = "MultiSelect" selectionChange=".onDeleteTodo">
        <columns>
                <Column width="80%">
                    <Text text="Todo" />
                </Column>
                <Column width="20%">
                    <Text text="" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{oo>text}"/>
                        <Button icon="sap-icon://delete" press=".onDeleteRow" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
</mvc:View>
