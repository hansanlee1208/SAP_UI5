<mvc:View controllerName="sync5.cl3.looptest.controller.LoopView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">
    <Page id="page" title="{i18n>title}">

    <Button text="Log print" width="100px" press =".onPrint()"/>
    <VBox >
    <f:SimpleForm
		layout="ResponsiveGridLayout"
		editable="true"
		title="Lets GuGu"
		adjustLabelSpan="true"
    >
		<!-- labelSpanXL="2"
		labelSpanL="2"
		labelSpanM="2"
		labelSpanS="4"
		emptySpanXL="4"
		emptySpanL="4"
		emptySpanM="2"
		emptySpanS="0"
		columnsXL="10"
		columnsL="10"
		columnsM="10"
         -->
		
    <HBox >

    <Text text="Dan" width="50px"/>
    <Input id = "input_dan" placeholder="Dan" width="100px"/>
    <Button  text="Execute" press=".btn_dan"/>
    </HBox>
    <Text id ="d" text = ""></Text>

    <HBox >
    <Text text="점수를 입력하세요.(0~100점)" width="200px"/>
    <Input id = "input_val" placeholder="점수" width="100px"/>
    <Button  text="학점계산" press=".btn_val"/>

    </HBox>

    <HBox >
    <Text text="Number" width="100px"/>
    <Input id = "input_num" placeholder="number" width="100px"/>
    <Button  text="입력 체크" press=".btn_check"/>
    </HBox>

    <HBox >
    <Button  text="Continue 숫자 체크" press=".btn_conti"/>
    </HBox>
    <HBox >
    <Button  text="Continue 숫자 체크 2" press=".btn_conti2"/>
    </HBox>
    <HBox >
    <Text text="메세지" width="100px"/>
    <Input id = "input_msg" placeholder="MSG" width="100px"/>
    </HBox>
    <Text id ="id_msg"  width="300px"/>
    <Label id ="id_lbl"  width="300px"/>
    <Button  text="Msg Display" width="220px" press=".btn_msg"/>
    <HBox >
    <Button  text="좌측 정렬"  press=".btn_sort('Left')"/>
    <Button  text="중앙 정렬"  press=".btn_sort('Center')"/>
    <Button  text="우측 정렬"  press=".btn_sort('Right')"/>
    </HBox >
    <HBox >
    <Button  text="Bold"  press=".btn_design('Bold')"/>
    <Button  text="Standard"  press=".btn_design('Standard')"/>
    </HBox >
    </f:SimpleForm>

    </VBox>
    </Page>
</mvc:View>
