<mvc:View controllerName="cl3.math.math.controller.MathView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <VBox >
        <RadioButtonGroup id = "rBtnGrp" select = ".rBtnPress" columns = "3">
            <RadioButton id = "AD" text = "Add"/>
            <RadioButton id = "MT" text = "Multi"/>
            <RadioButton id = "DV" text = "Divide"/>

        </RadioButtonGroup>

        <HBox>
        <Text text = "A" width="10px"/>
        <Input id = "A_id" width = "200px" showClearIcon="True"/>
        </HBox>

        <HBox >
        <Text text = "B" width="10px"/>
        <Input id = "B_id" width = "200px"/>
        </HBox>
        <Button 
            text = "Calc"
            press = ".onCalc"/>

        <Text text = "Result: {/RV}"/>
        <!-- <Text  text = "Multiple Result :  {/RV_M}  "/>
        <Text  text = "ADD Result :  {/RV_A}  "/> -->
        </VBox>
        <Label text="------------------------------------------------------------"/>
        <VBox>
        <HBox>
        <Text text = "Horizon" width="60px"/>
        <Input id = "h1" width = "200px" showClearIcon="True"/>
        </HBox>

        <HBox >
        <Text text = "Vertical" width="60px"/>
        <Input id = "v1" width = "200px"/>
        </HBox>
        <Button 
            text = "Calcul"
            press = ".onCalcul"/>
        <Text text = "Area: {/HV}"/>
        </VBox>
    </Page>
</mvc:View>
