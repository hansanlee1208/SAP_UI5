         <VBox >
            <Panel >
                <Table  items="{FFFly>/itemSet}">
	    <headerToolbar>
            <OverflowToolbar>
                <Title  text="ItemSet"/>
            </OverflowToolbar>
        </headerToolbar>     
        <columns>
            <Column>
                <Label text="Matnr" design="Bold" width="120px"/>
            </Column>
            <Column>
                <Label text="Werks" design="Bold"/>
            </Column>
            <Column>
                <Label text="Mtart" design="Bold"/>
            </Column>
            <Column>
                <Label text="Vbein" design="Bold"/>
            </Column>
            <Column>
                <Label text="Vbeip" design="Bold"/>
            </Column>
            <Column>
                <Label text="Price" design="Bold"/>
            </Column>
            <Column>
                <Label text="Currency" design="Bold"/>
            </Column>
        </columns>
        <items>
			<ColumnListItem>
				<cells>
                    <Input value = "{FFFly>Matnr}" width="120px"/>
                    <Text text = "{FFFly>Werks}"/>
                    <Text text = "{FFFly>Mtart}"/>
                    <Text text = "{FFFly>Vbein}"/>
                    <Text text = "{FFFly>Vbeip}"/>
                    <Text text = "{FFFly>Price}"/>
                    <Text text = "{FFFly>Currency}"/>
                </cells>
			</ColumnListItem>
    	</items>
        </Table>
        </Panel>
        </VBox>
        <Panel width="700%" headerText="VizFrame chart">
        <viz:VizFrame id="idDonut" vizType="bar">
        <viz:dataset>
            <viz.data:FlattenedDataset data = "{/ChartSet}">
                <viz.data:dimensions>
                    <viz.data:DimensionDefinition name="Material Code"
                                                    value="{Matnr}"/>
                </viz.data:dimensions>
                <viz.data:measures>
                    <viz.data:MeasureDefinition name="Material Price"
                        value="{Price}" />
                    <viz.data:MeasureDefinition name="Name"
                        value="{Name}" />
                </viz.data:measures>
                
            </viz.data:FlattenedDataset>
        </viz:dataset>
        <viz:feeds>
                    <viz.feeds:FeedItem  id='valueAxisFeed' uid="valueAxis" type="Measure"
                        values="Material Price" />
                    <viz.feeds:FeedItem uid="categoryAxis" type="Dimension"
                        values="Material Code" />
                </viz:feeds>
                <!-- <viz:dependents>
