<mvc:View controllerName="tablens.table.controller.TableView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:m="sap.ui.table"
    xmlns:viz="sap.viz.ui5.controls"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data" height="100%"
    >
    <Page id="page" title="{i18n>title}">
        <VBox >
            <Panel >
                <m:Table visibleRowCount ="5" rows = "{/DataSet}" selectionMode="None">
                    <m:extension>
                        <OverflowToolbar style="Clear" >
                            <Title id = "title" text="Products"/>
                        </OverflowToolbar>
                    </m:extension>

                    <m:columns>
                        <m:Column  width="11rem">
                            <Label text="Company Code"/>
                            <m:template>
                                <Text text="{Bukrs}"></Text>
                            </m:template>
                        </m:Column>
                        <m:Column width="11rem">
                            <Label text="Fiscal year"/>
                            <m:template>
                                <Text text="{Gjahr}"></Text>
                            </m:template>
                        </m:Column>
                        <m:Column width="11rem">
                            <Label text="Document number"/>
                            <m:template>
                                <Text text="{Belnr}"></Text>
                            </m:template>
                        </m:Column>
                        <m:Column width="11rem">
                            <Label text="Document currency"/>
                            <m:template>
                                <Text text="{Wrbtr}"></Text>
                            </m:template>
                        </m:Column>
                    </m:columns>
                </m:Table>
            </Panel>
        </VBox>

